
  <div class="registration">
    <h2 class="feat">REGISTER</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :username, "Username:", class: "col-md-3 control-label" %>
        <div class="col-md-6">
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <div class="col-md-3"></div>
      </div>

      <div class="field form-group">
        <%= f.label :email, "Email:", class: "col-md-3 control-label" %>
        <div class="col-md-6">
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="col-md-3"></div>
      </div>

      <div class="field form-group">
        <%= f.label :date_of_birth, "Date of Birth:", class: "col-md-3 control-label" %>
        <div class="col-md-6">
          <%= f.date_field :date_of_birth, class: "form-control" %>
        </div>
        <div class="col-md-3"></div>
      </div>

      <div class="field form-group">
        <%= f.label :password, "Password:", class: "col-md-3 control-label password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum):</em>
        <% end %>
        <div class="col-md-6">
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
        <div class="col-md-3"></div>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation, "Confirm password:", class: "col-md-3 control-label" %>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
        <div class="col-md-3"></div>
      </div>

      <div class="actions">
        <%= f.submit "SUBMIT", class: "register-btn" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
